{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "react-jsx",
    "noEmit": false,
    "declarationDir": "./build",
    "outDir": "./build",
    "rootDir": "./src",
    "typeRoots": ["../../node_modules/@types", "./node_modules/@types", "./src/@types"]
  },
  "exclude": [
    "node_modules",
    "**/*.test.*",
    "src/__mocks__",
    "src/plugins/testSpy.ts",
    "src/plugins/injectPrezlyMeta.ts"
  ],
  "include": [
    "./src/globals.d.ts",
    "./src"
  ]
}
